  "devDependencies": {
    "@graphql-codegen/cli": "1.21.3",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "husky": "^5.1.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
